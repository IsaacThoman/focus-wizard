{
  "name": "focus-wizard",
  "version": "0.1.0",
  "description": "Desktop focus app powered by Presage SmartSpectra SDK",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"tsc -p tsconfig.electron.json --watch\" \"electron .\"",
    "electron:build": "npm run build && electron-builder",
    "docker:build": "docker build -t focus-wizard-bridge -f ../bridge/Dockerfile ..",
    "docker:rebuild": "docker build --no-cache -t focus-wizard-bridge -f ../bridge/Dockerfile .."
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0"
  },
  "build": {
    "appId": "com.focuswizard.app",
    "productName": "Focus Wizard",
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "../bridge/build/focus_bridge",
        "to": "focus_bridge"
      }
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
